<Window x:Class="TestForIaUa.RepairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestForIaUa"
        mc:Ignorable="d"
        Title="RepairWindow"  Height="auto" Width="255" d:DesignHeight="435">
    <Grid Height="auto">
        <StackPanel  Name="mainStackPanel" Height="auto" >
            <Label x:Name="labelEq" Content="Ремонтируемое оборудование"/>
            <ComboBox x:Name="ComboBoxEquipment" DisplayMemberPath="Name"/>
            <Label x:Name="labeldata" Content="Выберите дату ремонта"/>
            <Calendar x:Name="calendar" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="labeldescription" Content="Описание ремонта" />
            <TextBox x:Name="textBoxDescription" Height="106" TextWrapping="Wrap" Text="" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <Button x:Name="buttonAdd" Content="Добавить данные о ремонте в базу" BorderThickness="2" Click="buttonAdd_Click"/>
        </StackPanel>

    </Grid>
</Window>
