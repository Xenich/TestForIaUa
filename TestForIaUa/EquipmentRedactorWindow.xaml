<Window x:Class="TestForIaUa.EquipmentRedactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestForIaUa"
        mc:Ignorable="d"
        Title="EquipmentRedactorWindow" Width="300">
    <Grid>
        <StackPanel  x:Name="mainStackPanel" >
            <Label x:Name="labelModel" Content="Изменить модель:"/>
            <ComboBox x:Name="ComboBoxModel"  DisplayMemberPath="Name" />
            <Label x:Name="label" Content="Изменить описание"/>
            <TextBox x:Name="textBoxDescription" Height="150" TextWrapping="Wrap" Text="" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <Label x:Name="labelRepair" Content="Ремонты"/>
            <TextBox x:Name="textBoxRepairs" Height="150" TextWrapping="Wrap" IsEnabled="False" Text=""/>
            <Border Height="5" Background="Black"/>
            <Button x:Name="buttonAdd" Content="Обновить" Click="buttonAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
